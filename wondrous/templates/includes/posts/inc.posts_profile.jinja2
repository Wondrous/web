{% for item in render_items %}

	{# -- Each item that gets rendered here is one grid item, i.e., a single news article -- #}
	<div class="masonry-brick">
		<div class="post-body round-10">
			{% include "/includes/inc.post_metadata.jinja2" %}

			{# if item['subject'] #}
				<div class="post-subject-text">
					<div class="post-cover-photo cover round-10" style="background-image: url(http://i1-news.softpedia-static.com/images/news2/Picture-of-the-Day-Real-Life-Simba-and-Mufasa-Caught-on-Camera-in-Tanzania-392687-2.jpg);">
						{% include "/includes/inc.post_identification.jinja2" %}
						<div class="post-subject-wrapper">
							<span class="post-subject-text-position">
								{% if item['subject'] %}
									{{ item['subject'] | safe }}
								{% else %}
									No title...
								{% endif %}
							</span>
						</div>
					</div>
				</div>
			{# endif #}

		</div>
	</div>
{% endfor %}