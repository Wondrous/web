{% set test_bg = [
    "http://upload.wikimedia.org/wikipedia/commons/6/66/Rochefort-beers.jpg",
    "https://tctechcrunch2011.files.wordpress.com/2013/01/college.jpg",
    "http://i1-news.softpedia-static.com/images/news2/Picture-of-the-Day-Real-Life-Simba-and-Mufasa-Caught-on-Camera-in-Tanzania-392687-2.jpg",
    "http://upload.wikimedia.org/wikipedia/commons/2/2b/GoraBeluha.jpg",
    "http://static.boredpanda.com/blog/wp-content/uploads/2014/09/20-Dogs-That-Look-Like-Something-Else13__300.jpg",
    "http://globe-views.com/dcim/dreams/cactus/cactus-04.jpg"
   ]
%}

<div class="backdrop"></div>
{% if render_items %}
    {% for item in render_items %}

        {# -- Each item that gets rendered here is one grid item, i.e., a single news article -- #}
        <div class="masonry-brick">
            <div class="post-body">
                {% include "/includes/posts/inc.post_metadata.jinja2" %}
                {% include "/includes/posts/inc.post_identification.jinja2" %}
                <div class="post-cover-photo cover no-top-border" style="background-image: url({{ test_bg | random() }});">
                    <div class="post-subject-text">
                        <div class="post-subject-wrapper">
                            <div class="post-subject-text-position">
                                {% if item['subject'] %}
                                    {{ item['subject'] | safe }}
                                {% else %}
                                    No title...
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="post-content">
                    {{ item['text'] | safe }}
                </div>
            </div>
        </div>
    {% endfor %}
{% endif %}