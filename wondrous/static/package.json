{
  "name": "wondrous",
  "version": "0.0.1",
  "description": "wondrous frontend app",
  "main": "js/app.js",
  "dependencies": {
    "flux": "^2.0.0",
    "react": "^0.12.0",
    "underscore": "^1.7.0",
    "superagent": "^0.21.0",
    "react-router": "^0.12.0",
    "jquery": "^2.1.3",
    "jquery-hammerjs":"^2.0.0",
    "kd-shim-jquery-mousewheel":"^3.1.12",
    "jquery-cropbox": "^0.1.3",
    "masonry-layout": "^3.2.1",
    "imagesloaded": "^3.1.8"
  },
  "devDependencies": {
    "browserify": "~6.2.0",
    "browserify-shim": "^3.8.2",
    "envify": "~3.0.0",
    "jest-cli": "~0.1.17",
    "react": "^0.12.0",
    "reactify": "^0.15",
    "uglify-js": "~2.4.15",
    "watchify": "~2.1.0",
    "browser-sync": "~2.1.6",
    "node-sass":"^2.0.1"
  },
  "browserify": {
    "transform": [ "browserify-shim" ]
  },
  "browser": {
    "pushstream": "./js/pushstream.js"
  },
  "browserify-shim": {
    "pushstream": "pushstream"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d .",
    "scss": "node-sass -w --output css css/style.scss style.css",
    "build": "browserify . | uglifyjs -cm > js/bundle.min.js && node-sass --output_style compressed --output css css/style.scss style.css",
    "watch": "browser-sync start --proxy localhost:6543 --files \"js/bundle.js, css/style.css\""
  },
  "author": "Ziyuan Liu",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
